<h1>Listing image_groups</h1>

<table>
  <tr>
    <th>Group id</th>
    <th>Group name</th>
    <th>Category</th>
    <th>Cover image</th>
    <th>Enabled</th>
    <th>Key word</th>
    <th>Desc</th>
    <th>Weight factor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @image_groups.each do |image_group| %>
  <tr>
    <td><%= image_group.id %></td>
    <td><%= image_group.group_name %></td>
    <td><%= image_group.category %></td>
    <td><%= image_group.cover_image_id %></td>
    <td><%= image_group.enabled %></td>
    <td><%= image_group.key_word %></td>
    <td><%= image_group.desc %></td>
    <td><%= image_group.weight_factor %></td>
    <td><%= link_to 'Show', image_group %></td>
    <td><%= link_to 'Edit', edit_image_group_path(image_group) %></td>
    <td><%= link_to 'Destroy', image_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


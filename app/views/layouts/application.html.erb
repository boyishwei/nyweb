  <!--nav-bar-->

  <%= yield %> 

  <!-- Modal -->
  <div id="slide_modal" class="advanced-modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3 id="myModalLabel">&nbsp;</h3>
    </div>
    <div class="modal-body">
      <div id="image_group_carousel" class="carousel slide" data-ride="carousel">
      </div>
      <%= link_to 'switch', 'comments/',  method: :get, remote:true, id:"hidden_switch", class:'btn hide' %>
      <div class="row">
        <div class="span5">
          <div id="comments_area" class="well well-nomargin">
          </div>
        </div>

        <div class="span3">
          <div id="explanation" class="alert alert-error hide fade in">
            <button type="button" class="close close-btn">&times;</button>
            <p id="error_msg"></p>
          </div>
          <%= form_for(Comment.new, url:comments_path, remote:true) do |c| %>
          <%= c.text_area :comment , id:"comment_area", rows: 3%>
          <%= c.hidden_field :image_id %>
          <%= c.submit "发表评论", id:"comment_submit", class:"btn btn-warning" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    </div>
  </div>

  <!--login modal-->
  <div id="regSucModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myRegSucLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myRegSucLabel" class="text-center">恭喜您, 注册成功!</h3>
    </div>
    <div class="modal-body text-center">
        ^o^
    </div>
    <div class="modal-footer text-center">
        <button class="btn" data-dismiss="modal" aria-hidden="true">关&nbsp;闭</button>
    </div>
  </div>


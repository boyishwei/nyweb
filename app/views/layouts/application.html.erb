            <li><a href="/education">优 · 学</a></li>
            <li><a href="/cate">优 · 肴</a></li>
            <li><a href="/tour">优 · 游</a></li>
            <li><a href="/beauty">优 · 美</a></li>
            <li><a href="/entertainment">优 · 玩</a></li>
            <li><a href="/fab">优 · 品</a></li>
            <li><a href="/show">优 · 秀</a></li>
            <li><a href="/decoration">优 · 居</a></li>
            <li><a href="/promotion">优 · 惠</a></li>
          </ul>
          <div class="nav pull-right user-zone" id="user_zone">
            <%= render :partial => 'users/login', locals:{ :user=>User.new }%>
          </div>
        </div>
      </div>
    </div>
  </div>

<% for i in 1..@groups.total_pages %>
	<ul class="thumbnails">
		<% @groups.page(i).each do|group| %>
			<li class="span4">
				<%= link_to image_tag("#{group.cover.instance.url || group.cover.location}", class:"img-cover"), "slide_modal/#{group.id}", class:"thumbnail", remote:true %>
			</li>
		<% end %>
	</ul>
<% end %>
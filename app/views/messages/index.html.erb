<br>

<div class="container" style="height: 600px"> 
	<hr>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th style="width:15%;">用户名</th>
				<th>留言详细内容</th>
				<th>留言时间</th>
			</tr>
		</thead>
		<tbody>
		<% @messages.each do |msg| %>
			<tr>
				<td>
					<% if !msg.user_id.nil? %>
						<% if  !msg.user.avatar.mini.url.nil? %>
							<%= image_tag msg.user.avatar.mini.url %> 
						<% end %>
						<% if signed_in?&&(msg.user_id==current_user.id) %>
							<%= link_to "@" + msg.user.username+":", user_path(msg.user) %>
						<% else  %>
							@<%= msg.user.username + ":" %>
						<% end  %>
					<% else %>
						匿名用户:<%= msg.user_id %>
					<% end %>
				</td>
				<td><%= msg.message %></td>
				<td sytle="text-align:right;">
					<%= link_to_if signed_in?&&(msg.user_id==current_user.id), "删除", msg, method: :delete, data: { confirm: '确认要删除此掉留言?' }  %>
				</td>
				<td>
					<%= msg.created_at %>
				</td>
			</tr>
		<% end  %>
		</tbody>
	</table>
	<%= paginate @messages %>
	<%= link_to "给我们留言", new_message_path, class:"btn btn-success" %>
</div>
